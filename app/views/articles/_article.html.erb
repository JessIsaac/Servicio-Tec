<div class="container">
<ul class="nav nav-pills nav-fill">
  <% obj.each do |article| %>
    <div class="nav-item">
      <div class="card" style="width: 20rem; margin:15px">
        <%= link_to (image_tag(article.imagen,class: "card-img-top img-thumbnail")),article_path(article) %>
        <div class="card-body">
          <%= link_to article.title, article_path(article),:class => "card-title" %>
          <%= truncate(article.description,length:300,class:"card-text") %>
        </div>
      </div>
    </div>
  <% end %>
</ul>
</div>
